@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/fabric.components.min.css" rel="stylesheet" />
<script src="~/js/jquery-3.3.1.min.js"></script>
<div class="row" style="margin-top:100px;min-height:500px;">
    <form class="col-md-3 center-block">
        <div class="ms-TextField">
            <label class="ms-Label">课程名称</label>
            <input class="ms-TextField-field" id="subjectName" type="text" value="" placeholder="">
        </div>
        <div class="ms-TextField">
            <label class="ms-Label">所属分类</label>
            <input class="ms-TextField-field" id="subjectClass" type="text" value="" placeholder="">
        </div>
        <button class="ms-Button ms-Button--primary" id="AddClass">
            <span class="ms-Button-label" >添加分类</span>
        </button>
    </form>
</div>

<script>
    $("#AddClass").click(function (e) {
        e.preventDefault();
        var subjectName = $("#subjectName").val();
        var subjectClass = $("#subjectClass").val();
        if (subjectClass == "" || subjectName == "") {

            alert("请完整填写信息");
           
            return;
        }
        $.ajax({
            url: "/Prediction/AddDataToFile",
            data: {
                "subjectName": subjectName,
                "predictValue": subjectClass
            },
            success: function (data) {
                alert("添加成功");

            },
            error: function (data) {


            }


        })

    });
</script>